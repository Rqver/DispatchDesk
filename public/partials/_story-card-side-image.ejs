<article>
    <a href="/story/<%= story.slug %>" class="group flex gap-4">
        <img
                src="<%= story.header_media %>?width=192&format=webp&quality=70"
                srcset="
        <%= story.header_media %>?width=96&format=webp&quality=70 96w,
        <%= story.header_media %>?width=192&format=webp&quality=70 192w,
        <%= story.header_media %>?width=384&format=webp&quality=70 384w
    "
                sizes="96px"
                alt="<%= story.title %>"
                loading="lazy"
                fetchpriority="low"
                class="w-24 h-16 object-cover rounded-md flex-shrink-0 shadow-sm"
        />
        <div>
            <% if (story.is_breaking) { %>
                <span class="text-xs font-bold text-red-600 dark:text-red-500 uppercase">Breaking</span>
                <h3 class="font-bold text-gray-800 dark:text-gray-100 group-hover:text-cyan-500 transition"><%= story.title %></h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1"><%= story.tagline %></p>
            <% } else { %>
                    <% story.categories.forEach((cat, index) => { %>
                        <span class="text-xs text-gray-500 dark:text-gray-400"><%= cat.name %></span>
                        <% if (index < story.categories.length - 1) { %>
                            <span class="text-xs text-gray-500 dark:text-gray-400"> / </span>
                        <% } %>
                    <% }) %>
                <h3 class="font-bold text-gray-800 dark:text-gray-100 group-hover:text-cyan-500 transition"><%= story.title %></h3>
                <p class="text-sm text-gray-600 dark:text-gray-400 mt-1"><%= story.tagline %></p>
            <% } %>
        </div>
    </a>
</article>