<% const categories = [featuredCategories.category_one, featuredCategories.category_two, featuredCategories.category_three, featuredCategories.category_four, featuredCategories.category_five].filter(Boolean); %>
<% if (categories.length > 0) { %>
    <nav class="hidden md:flex items-center space-x-4">
        <% categories.forEach(category => { %>
            <a href="/category/<%= category.slug %>" class="text-sm font-medium text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors">
                <%= category.name %>
            </a>
        <% }) %>
    </nav>
<% } %>