<% if (liveBlog) { %>
    <section class="mb-16">
        <% if (liveBlog.pinned_entry) { %>
            <div class="bg-cyan-600 dark:bg-cyan-700 text-white px-6 py-4 rounded-t-xl">
                <div class="text-xs uppercase font-bold tracking-widest mb-1">Live Updates</div>
                <h2 class="text-xl md:text-2xl font-bold"><%= liveBlog.name %></h2>
                <div class="prose prose-sm prose-invert max-w-none mt-2">
                    <%- liveBlog.pinned_entry.entry %>
                </div>
            </div>
        <% } %>

        <div class="overflow-hidden rounded-b-xl shadow-xl divide-y divide-gray-200 dark:divide-gray-800">
            <% [...liveBlog.entries].reverse().forEach(entry => { %>
                <article class="bg-gray-100 dark:bg-gray-950 px-6 py-6 text-gray-900 dark:text-gray-100">

                    <h3 class="text-xl font-bold mb-3 leading-tight text-gray-900 dark:text-white">
                        <%= entry.title %>
                    </h3>

                    <div class="flex items-start gap-4">
                        <div class="text-xs font-semibold uppercase text-red-600 dark:text-red-400 tracking-wide min-w-fit text-right pt-0.5">
                            <%= new Date(entry.date_created).toLocaleTimeString("en-NZ", {
                                hour: "2-digit",
                                minute: "2-digit",
                                timeZone: "Pacific/Auckland"
                            }) %>
                        </div>

                        <div class="flex-1 border-l border-gray-300 dark:border-gray-700 pl-3">
                            <div class="prose dark:prose-invert max-w-none">
                                <%- entry.entry %>
                            </div>
                        </div>
                    </div>
                </article>
            <% }) %>
        </div>
    </section>
<% } %>