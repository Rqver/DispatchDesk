<% if (story) { %>
    <section class="mb-12">
        <div class="bg-white dark:bg-gray-800 rounded-lg p-8 text-center border border-gray-200 dark:border-gray-700 <% if (story.is_breaking) { %>ring-2 ring-red-500<% } %>">
            <% if (story.is_breaking) { %>
                <span class="text-sm font-bold text-red-600 dark:text-red-500 uppercase tracking-widest">Breaking</span>
            <% } else { %>
                 <% story.categories.forEach((cat, index) => { %>
                    <a href="/category/<%= cat.slug %>" class="text-sm font-bold text-cyan-500 uppercase tracking-widest hover:underline">
                        <%= cat.name %>
                    </a>
                    <% if (index < story.categories.length - 1) { %>
                        <span class="text-sm text-gray-500"> / </span>
                    <% } %>
                <% }) %>
            <% } %>

            <h2 class="text-3xl font-extrabold my-4 max-w-3xl mx-auto">
                <a href="/story/<%= story.slug %>" class="hover:text-cyan-500 transition">
                    <%= story.title %>
                </a>
            </h2>

            <p class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto my-6 leading-relaxed">
                <%= story.tagline %>
            </p>

            <div class="flex items-center justify-center gap-3">
                <% if (story.author) { %>
                    <span class="font-semibold">By <%= story.author %></span>
                <% } %>
            </div>
        </div>
    </section>
<% } %>
