    <div class="max-w-7xl mx-auto bg-white dark:bg-gray-800 p-8 rounded shadow">
        <h1 class="text-4xl font-extrabold text-gray-900 dark:text-gray-100 mb-6 leading-tight">
            <%= title %>
        </h1>

        <div class="prose dark:prose-invert max-w-none">
            <%- content %>
        </div>
    </div>
</main>

<%- include('partials/_footer') %>
<%- include('partials/_search-script') %>
</body>
</html>